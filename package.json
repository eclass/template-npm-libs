{
  "name": "@eclass/template-npm-libs",
  "version": "0.0.1",
  "description": "Plantilla base para librerÃ­as npm de eclass",
  "main": "src",
  "scripts": {
    "lint": "eslint . --fix",
    "format": "prettier-standard '{src,test}/**/*.js'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eclass/template-npm-libs"
  },
  "keywords": [
    "eclass"
  ],
  "engines": {
    "node": ">=10.16.3"
  },
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eclass/template-npm-libs/issues"
  },
  "homepage": "https://github.com/eclass/template-npm-libs#readme",
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@eclass/eslint-config": "1.1.3",
    "@semantic-release/changelog": "3.0.5",
    "@semantic-release/git": "7.0.18",
    "eslint": "6.6.0",
    "eslint-plugin-array-func": "3.1.3",
    "eslint-plugin-eslint-comments": "3.1.2",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsdoc": "17.1.1",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-sonarjs": "0.5.0",
    "eslint-plugin-standard": "4.0.1",
    "husky": "3.0.9",
    "lint-staged": "9.4.2",
    "prettier-standard": "15.0.1",
    "semantic-release": "15.13.30"
  },
  "eslintConfig": {
    "extends": "@eclass"
  },
  "eslintIgnore": [
    "coverage"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.js": [
      "eslint --fix",
      "prettier-standard",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "renovate": {
    "extends": [
      "@eclass:js-lib"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
